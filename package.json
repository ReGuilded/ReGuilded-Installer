{
  "name": "reguilded-setup",
  "version": "0.0.1-alpha",
  "description": "ReGuilded Setup is an easy installer for ReGuilded.",
  "main": "src/index.js",
  "scripts": {
    "app": "electron src/index.js",
    "dist_wl": "electron-builder --win --linux",
    "dist_mac": "electron-builder --mac"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ReGuilded/ReGuilded-Setup.git"
  },
  "author": "ReGuilded",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ReGuilded/ReGuilded-Setup/issues"
  },
  "homepage": "https://github.com/ReGuilded/ReGuilded-Setup#readme",
  "dependencies": {
    "@electron/remote": "^1.1.0",
    "@octokit/core": "^3.5.1",

    "fs-extra": "^8.1.0",
    "got": "^9.6.0",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "dev.reguilded.setup",
    "productName": "ReGuilded Setup",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "zip",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
